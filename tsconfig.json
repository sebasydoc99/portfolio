{
  "compilerOptions": {
    "paths": {
      "app/*": ["./src/*"],
      "@/components/*": ["./a/components/*"],
      "@/lib/*" : ["./a/lib/*"],
      "@/styles/*" : ["./src/styles/*"],
      "@/messages/*" : ["./messages/*"],
    },
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
